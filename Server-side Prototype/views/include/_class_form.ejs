
<form action="/api/classes" method="POST" id="add_class">
    <div class="new_user"></div>
    <div class="form-group">
        <label for="name" class="text-light">Class Name</label>
        <input type="hidden" name="id" value="">
        <input type="text" name="class_name" value="" placeholder="ex. ICS 132">
    </div>  

    <div class="form-group">
        <label for="Email" class="text-light">Professor Name (Optional)</label>
        <input type="text" name="professor" value="" placeholder="ex. Smith">
    </div>

    <div class="form-group">
        <button type="submit" class="btn text-dark update">Save</button>
    </div>

</form>
